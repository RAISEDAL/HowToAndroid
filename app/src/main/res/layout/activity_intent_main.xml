<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intentdemo.IntentMainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Intent Demo"
            android:textSize="16dp"></TextView>

        <RadioGroup
            android:id="@+id/optionList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/webButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Search"
                android:textSize="16dp"></RadioButton>

            <RadioButton
                android:id="@+id/webQueryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Search (Query)"
                android:textSize="16dp"></RadioButton>

            <RadioButton
                android:id="@+id/callMeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Me"
                android:textSize="16dp"></RadioButton>

            <RadioButton
                android:id="@+id/readContactButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Contacts"
                android:textSize="16dp"></RadioButton>

            <RadioButton
                android:id="@+id/sendDataButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Data"
                android:textSize="16dp"></RadioButton>

            <RadioButton
                android:id="@+id/sendEmailButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Email"
                android:textSize="16dp"></RadioButton>

        </RadioGroup>

        <Button
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            android:textSize="16dp"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>